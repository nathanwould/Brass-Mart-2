datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String  @id @default(cuid())
  name     String  @default("")
  email    String  @unique @default("")
  password String?
}

model Product {
  id             String        @id @default(cuid())
  productType    String
  name           String        @default("")
  make           String        @default("")
  model          String        @default("")
  category       String
  instrumentType String
  instrumentKey  String        @default("")
  boreSize       Float?
  bellSize       Float?
  description    String        @default("")
  photos         ProductImage? @relation("Product_photos", fields: [photosId], references: [id])
  photosId       String?       @unique @map("photos")
  price          Int
  status         String        @default("in-stock")
}

model ProductImage {
  id      String   @id @default(cuid())
  image   String?
  altText String   @default("")
  product Product? @relation("Product_photos")
}